<% layout("/layouts/boilerplate") %>

<h2 class="text-center sub-heading">
  Showcase your stunning wallpapers, effortlessly.
</h2>

<div class="container d-flex justify-content-center align-items-center mb-5">
  <div
    class="card p-4 shadow-sm rounded-4"
    style="max-width: 500px; width: 100%"
  >
    <form action="/wallpapers" method="post">
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="url"
          id="image"
          name="wallpaper[image]"
          class="form-control"
          placeholder="Enter image URL"
        />
      </div>

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          name="wallpaper[title]"
          class="form-control"
          placeholder="Enter title"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="wallpaper[description]"
          class="form-control"
          placeholder="Describe your image"
          rows="3"
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="wallpaper[category]" class="form-select">
          <option value="" disabled selected>Select a category</option>
          <option value="Nature">Nature</option>
          <option value="Abstract">Abstract</option>
          <option value="Cities and Architecture">
            Cities and Architecture
          </option>
          <option value="Animals">Animals</option>
          <option value="Technology">Technology</option>
          <option value="Travel">Travel</option>
          <option value="Minimalist">Minimalist</option>
          <option value="Space and Astronomy">Space and Astronomy</option>
          <option value="Seasonal">Seasonal</option>
          <option value="Gaming">Fantasy</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="tags" class="form-label">Tags</label>
        <input
          type="text"
          id="tags"
          name="wallpaper[tags]"
          class="form-control"
          placeholder="e.g. sunset, beach, landscape"
        />
      </div>

      <button class="btn btn-dark w-100">Upload</button>
    </form>
  </div>
</div>

<style>
  body {
    background: #f8f9fa;
    color: #333;
  }

  .sub-heading {
    margin: 1.5rem 0;
  }

  .card {
    background: white;
    border: 1px solid #ddd;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
  }

  .form-label {
    font-weight: 500;
    color: #555;
  }

  .form-control {
    border: 1px solid #ddd;
    background: white;
    color: #333;
  }

  .form-select {
    border: 1px solid #ddd;
    color: #333;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.2);
  }

  .btn-dark {
    background-color: #333;
    border: none;
  }

  .btn-dark:hover {
    background-color: #000;
  }
</style>
